{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [ "es2020" ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "exclude": [ "node_modules", "dist" ],
  "include": [ "src/**/*.ts" ]
}
